{% extends "base.html.twig" %}
{% block body %}
    {{ dump(user) }}

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                        <img src="{{ asset(g_imageChecker.defaultImage(app.user.img, 'user')) }}" alt="profile image of {{ user.username }}" class="rounded-circle img-profile" height="200" width="200" />
                        {{ user.username }}
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </div>
            </div>
        </div>



        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    Quote
                </div>
                <div class="">
                    <table class="table table-striped">
                        <tr>
                            <th class="text-nowrap" scope="row">Column ordering</th>
                            <td colspan="5">Yes</td>
                        </tr>
                    </table>
                </div>
            </div>



        </div>
    </div>
{% endblock body %}