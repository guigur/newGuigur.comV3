                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'Shop' %}active{% endif %}">
                            <a href="{{ path('Shop') }}"><span class="fa fa-shopping-cart" aria-hidden="true"></span>  Magasin</a>
                        </li>
