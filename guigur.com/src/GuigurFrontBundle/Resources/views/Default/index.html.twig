        <div class="col-md-8">
            {% include 'Article_min_display.html.twig'  with {'lastArticle': true }%}
            <div class="card my-4">
                <h5 class="card-header">
                    {% trans %}card.someprojects{% endtrans %}
                </h5>
                <div class="card-body">
                    <div class="row">
                    {% for Project in Projects %}
