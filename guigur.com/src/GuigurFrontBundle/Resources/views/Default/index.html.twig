    <div class="col-md-12">
        Content
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#guigurModal">
            Launch demo modal
        </button>
    </div>
    -->
{% endblock %}
{% block js %}
    <script>$('#myModal').on('shown.bs.modal', function () {
            $('#myInput').focus()
        })</script>
{% endblock %}