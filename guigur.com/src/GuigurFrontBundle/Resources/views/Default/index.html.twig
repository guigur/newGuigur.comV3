                       {%  if app.request.cookies.get('dark') == "true" %} data-theme=dark {% endif %}
                       data-chrome="nofooter"
                       data-background-color="#FF0000">
                       {% trans %}twitter.tb{% endtrans %}&nbsp;@guigur_com
