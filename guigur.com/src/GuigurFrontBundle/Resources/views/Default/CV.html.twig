     {% for cvContent in cvContents %}
    <div class="row">
        <div class="col-md-12">
            <div class="cv-separator"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <h1 class="my-4">{{ cvContent.title }}
                <small>{{ cvContent.pot }}</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-1">
            <p class="cv-text">
                {{ cvContent.text }}
            </p>
        </div>
        <div class="col-md-2">
            <div class="cv-qrcode-container">
                <div class="qrcode" data-qrcode-text="{{ cvContent.url }}"></div>
            </div>
            <div class="cv-link-qrcode">{{ cvContent.url }}</div>
        </div>
    </div>
            <br />
    {% endfor %}
