{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.qrcode.min.js') }}"></script>
    <script>
        $('.qrcode').qrcode({width: 128,height: 128,text: $('.qrcode').data("qrcode-text")});

    </script>
{% endblock js %}